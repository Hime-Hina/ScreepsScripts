{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "esnext"
    ],
    "target": "es2017",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "noEmitOnError": true,
    "strictNullChecks": true,
  },
  "exclude": [
    "./node_modules"
  ]
}
